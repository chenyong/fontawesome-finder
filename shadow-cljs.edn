
{:source-paths ["src" "cli"]
 :dependencies [[mvc-works/hsl          "0.1.2"]
                [mvc-works/verbosely    "0.1.2"]
                [mvc-works/keycode      "0.1.3"]
                [mvc-works/shell-page   "0.1.8"]
                [respo                  "0.8.20"]
                [respo/ui               "0.3.7"]
                [respo/alerts           "0.2.5"]
                [respo/message          "0.3.3"]
                [respo/value            "0.2.4"]
                [respo/markdown         "0.2.1"]
                [respo/reel             "0.3.2"]]
 :open-file-command ["subl" ["%s:%s:%s" :file :line :column]]
 :socket-repl {:port 0}
 :builds {:client {:target :browser
                   :output-dir "target/"
                   :asset-path "./"
                   :modules {:main {:entries [app.main]}}
                   :devtools {:after-load app.main/reload!
                              :http-root "target"
                              :http-port 7000}
                   :compiler-options {:infer-externs :auto}
                   :js-options {:resolve {"icons" {:target :file
                                                   :file "entry/icons.js"}}}
                   :release {:output-dir "dist/"
                             :module-hash-names 8
                             :build-options {:manifest-name "assets.edn"}}}
          :page {:target :node-script
                 :output-to "target/page.js"
                 :main app.page/main!
                 :js-options {:resolve {"icons" {:target :file
                                                 :file "entry/icons.js"}}}
                 :devtools {:after-load app.page/main!}}}}
